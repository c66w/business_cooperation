# 文档处理微服务环境配置

# 服务配置
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite:///./data/business_cooperation.db

# OSS配置
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET_NAME=business-cooperation-docs
OSS_DOMAIN=https://business-cooperation-docs.oss-cn-hangzhou.aliyuncs.com

# LLM配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# 文档处理配置
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt
PARSING_TIMEOUT=300  # 5分钟

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/document_service.log
